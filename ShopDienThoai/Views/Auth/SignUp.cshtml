@model ShopDienThoai.Models.AuthSignUp
@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Auth/Layout/_Layout.cshtml";
}

<div class="row d-flex align-items-center justify-content-center h-100">
    <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
             class="img-fluid" alt="...">
    </div>
    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h1 class="text-primary fw-bold pb-3 text-uppercase">@ViewBag.Title</h1>
        @using (Html.BeginForm("SignUp", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-outline mb-4">
                @Html.LabelFor(model => model.ho_ten, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.ho_ten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ho_ten, "", new { @class = "text-danger" })
            </div>
            <div class="form-outline mb-4">
                @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
            <div class="form-outline mb-4">
                @Html.LabelFor(model => model.mat_khau, htmlAttributes: new { @class = "form-label" })
                @Html.PasswordFor(m => m.mat_khau, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.mat_khau, "", new { @class = "text-danger" })
            </div>
            <div class="form-outline mb-4">
                @Html.LabelFor(model => model.xac_nhan_mat_khau, htmlAttributes: new { @class = "form-label" })
                @Html.PasswordFor(m => m.xac_nhan_mat_khau, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.xac_nhan_mat_khau, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary btn-lg text-uppercase btn-block w-100">Đăng ký</button>
        }
    </div>
</div>

