@model PagedList.IPagedList<ShopDienThoai.Models.nha_cung_cap>
@{
    ViewBag.Title = "Nhà cung cấp";
    Layout = "~/Views/Admin/Layout/_Layout.cshtml";
}

<div class="p-4">
    <h1 class="fw-bold text-uppercase text-dark-emphasis">@ViewBag.Title</h1>
    <div class="row mt-3">
        <div class="col-10">
            <form method="get" id="formSearchSupplier">
                <div class="row">
                    <div class="col-5">
                        <input class="form-control"
                               id="inputSearchSupplier"
                               placeholder="Nhập tên nhà cung cấp cần tìm kiếm..." />
                    </div>
                    <div class="col-2">
                        <button type="submit" class="btn btn-primary shadow">
                            <i class="fa-solid fa-magnifying-glass"></i>
                            Tìm kiếm
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-2 text-end">
            <a href="/admin/supplier/add" class="btn btn-success shadow">
                <i class="fa-solid fa-plus"></i>
                Thêm mới
            </a>
        </div>
    </div>
    <div class="mt-3" id="supplierTable">
        @Html.Partial("~/Views/Admin/SupplierTable.cshtml", Model)
    </div>
</div>

