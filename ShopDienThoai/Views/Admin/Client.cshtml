@model PagedList.IPagedList<ShopDienThoai.Models.tai_khoan>
@{
    ViewBag.Title = "Khách hàng";
    Layout = "~/Views/Admin/Layout/_Layout.cshtml";
}

<div class="p-4">
    <h1 class="fw-bold text-uppercase text-dark-emphasis">@ViewBag.Title</h1>
    <div class="row mt-3">
        <div class="col-10">
            <form method="get" id="formSearchClient">
                <div class="row">
                    <div class="col-5">
                        <input class="form-control"
                               id="inputSearchClient"
                               placeholder="Nhập tên khách hàng cần tìm kiếm..." />
                    </div>
                    <div class="col-3">
                        <select class="form-select" name="status" id="selectSearchClient">
                            <option value="">----- Trạng thái -----</option>
                            <option value="true">Hoạt động</option>
                            <option value="false">Bị khoá</option>
                        </select>
                    </div>
                    <div class="col-2">
                        <button type="submit" class="btn btn-primary shadow">
                            <i class="fa-solid fa-magnifying-glass"></i>
                            Tìm kiếm
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-2 text-end">
            <a href="/admin/client/add" class="btn btn-success shadow">
                <i class="fa-solid fa-plus"></i>
                Thêm mới
            </a>
        </div>
    </div>
    <div class="mt-3" id="clientTable">
        @Html.Partial("~/Views/Admin/ClientTable.cshtml", Model)
    </div>
</div>


