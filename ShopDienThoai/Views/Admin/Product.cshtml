@model PagedList.IPagedList<ShopDienThoai.Models.san_pham>
@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Views/Admin/Layout/_Layout.cshtml";
}

<div class="p-4">
    <h1 class="fw-bold text-uppercase text-dark-emphasis">@ViewBag.Title</h1>
    <div class="row mt-3">
        <div class="col-8">
            <form method="get" id="formSearchProduct">
                <div class="row row-gap-3">
                    <div class="col-6">
                        <input class="form-control"
                               id="inputSearchProduct"
                               placeholder="Nhập tên sản phẩm cần tìm kiếm..." />
                    </div>
                    <div class="col-3">
                        <input class="form-control"
                               id="inputSearchProductMinPrice"
                               type="number"
                               placeholder="Min"
                               min="0" />
                    </div>
                    <div class="col-3">
                        <input class="form-control"
                               type="number"
                               id="inputSearchProductMaxPrice"
                               placeholder="Max" />
                    </div>
                    <div class="col-3">
                        @Html.DropDownList("inputSearchProductManufacturer", null, htmlAttributes: new { @class = "form-select" })
                    </div>
                    <div class="col-2">
                        <select id="inputSearchProductRam" class="form-select">
                            <option>Ram</option>
                            <option value="4">4 GB</option>
                            <option value="8">8 GB</option>
                            <option value="12">16 GB</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <select id="inputSearchProductStorage" class="form-select">
                            <option>Dung lượng lưu trữ</option>
                            <option value="64">64 GB</option>
                            <option value="128">128 GB</option>
                            <option value="256">256 GB</option>
                            <option value="512">512 GB</option>
                            <option value="1024">1 TB</option>
                        </select>
                    </div>
                    <div class="col-3">
                        <button type="submit" class="btn btn-primary shadow w-100">
                            <i class="fa-solid fa-magnifying-glass"></i>
                            Tìm kiếm
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-4 text-end">
            <a href="/admin/product/add" class="btn btn-success shadow">
                <i class="fa-solid fa-plus"></i>
                Thêm mới
            </a>
        </div>
    </div>
    <div class="mt-3" id="productTable">
        @Html.Partial("~/Views/Admin/ProductTable.cshtml", Model)
    </div>
</div>

