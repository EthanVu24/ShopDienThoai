@model PagedList.IPagedList<ShopDienThoai.Models.hang_san_xuat>
@{
    ViewBag.Title = "Nhà sản xuất";
    Layout = "~/Views/Admin/Layout/_Layout.cshtml";
}

<div class="p-4">
    <h1 class="fw-bold text-uppercase text-dark-emphasis">@ViewBag.Title</h1>
    <div class="row mt-3">
        <div class="col-10">
            <form method="get" id="formSearchManufacturer">
                <div class="row">
                    <div class="col-5">
                        <input class="form-control"
                               id="inputSearchManufacturer"
                               placeholder="Nhập tên hãng sản xuất cần tìm kiếm..." />
                    </div>
                    <div class="col-2">
                        <button type="submit" class="btn btn-primary shadow">
                            <i class="fa-solid fa-magnifying-glass"></i>
                            Tìm kiếm
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-2 text-end">
            <a href="/admin/manufacturer/add" class="btn btn-success shadow">
                <i class="fa-solid fa-plus"></i>
                Thêm mới
            </a>
        </div>
    </div>
    <div class="mt-3" id="manufacturerTable">
        @Html.Partial("~/Views/Admin/ManufacturerTable.cshtml", Model)
    </div>
</div>

