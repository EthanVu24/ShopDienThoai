@model ShopDienThoai.Models.san_pham
@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Views/Admin/Layout/_Layout.cshtml";
}

<div class="p-4">
    <h1 class="fw-bold text-uppercase text-dark-emphasis">@ViewBag.Title</h1>
    <div class="mt-4">
        @using (Html.BeginForm("ProductCreate", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row row-gap-3">
                <div class="col-12">
                    @Html.LabelFor(model => model.anh_san_pham, htmlAttributes: new { @class = "form-label" })
                    <div>
                        <input type="file" id="image" name="image" class="form-control" accept=".jpg, .jpeg, .png" style="width: max-content;" />
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.ten_san_pham, htmlAttributes: new { @class = "form-label" })
                    <div>
                        @Html.EditorFor(model => model.ten_san_pham, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ten_san_pham, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.so_luong, htmlAttributes: new { @class = "form-label" })
                    <div>
                        @Html.EditorFor(model => model.so_luong, new { htmlAttributes = new { @class = "form-control", @min = "1" } })
                        @Html.ValidationMessageFor(model => model.so_luong, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.don_gia, htmlAttributes: new { @class = "form-label" })
                    <div>
                        @Html.EditorFor(model => model.don_gia, new { htmlAttributes = new { @class = "form-control", @min = "1" } })
                        @Html.ValidationMessageFor(model => model.don_gia, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.giam_gia, htmlAttributes: new { @class = "form-label" })
                    <div>
                        @Html.EditorFor(model => model.giam_gia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.giam_gia, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    <label class="form-label">Hãng sản xuất</label>
                    <div>
                        @Html.DropDownList("id_hang_san_xuat", null, htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.id_hang_san_xuat, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    <label class="form-label">Nhà cung cấp</label>
                    <div>
                        @Html.DropDownList("id_nha_cung_cap", null, htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.giam_gia, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.chi_tiet_san_pham.man_hinh, htmlAttributes: new { @class = "form-label" })
                    <div>
                        <select id="chi_tiet_san_pham.man_hinh" name="chi_tiet_san_pham.man_hinh" class="form-select">
                            <option value="LCD IPS">LCD IPS</option>
                            <option value="OLED">OLED</option>
                            <option value="AMOLED">AMOLED</option>
                            <option value="SUPER AMOLED">SUPER AMOLED</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.chi_tiet_san_pham.man_hinh, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.chi_tiet_san_pham.do_phan_giai, htmlAttributes: new { @class = "form-label" })
                    <div>
                        @Html.EditorFor(model => model.chi_tiet_san_pham.do_phan_giai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.chi_tiet_san_pham.do_phan_giai, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.chi_tiet_san_pham.tan_so_quet, htmlAttributes: new { @class = "form-label" })
                    <div>
                        <select id="chi_tiet_san_pham.tan_so_quet" name="chi_tiet_san_pham.tan_so_quet" class="form-select">
                            <option value="60">60 Hz</option>
                            <option value="120">120 Hz</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.chi_tiet_san_pham.tan_so_quet, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.chi_tiet_san_pham.cam_sau, htmlAttributes: new { @class = "form-label" })
                    <div>
                        @Html.EditorFor(model => model.chi_tiet_san_pham.cam_sau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.chi_tiet_san_pham.cam_sau, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.chi_tiet_san_pham.cam_truoc, htmlAttributes: new { @class = "form-label" })
                    <div>
                        @Html.EditorFor(model => model.chi_tiet_san_pham.cam_truoc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.chi_tiet_san_pham.cam_truoc, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.chi_tiet_san_pham.cpu, htmlAttributes: new { @class = "form-label" })
                    <div>
                        @Html.EditorFor(model => model.chi_tiet_san_pham.cpu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.chi_tiet_san_pham.cpu, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.chi_tiet_san_pham.ram, htmlAttributes: new { @class = "form-label" })
                    <div>
                        <select id="chi_tiet_san_pham.ram" name="chi_tiet_san_pham.ram" class="form-select">
                            <option value="4">4 GB</option>
                            <option value="8">8 GB</option>
                            <option value="12">16 GB</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.chi_tiet_san_pham.ram, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.chi_tiet_san_pham.rom, htmlAttributes: new { @class = "form-label" })
                    <div>
                        <select id="chi_tiet_san_pham.rom" name="chi_tiet_san_pham.rom" class="form-select">
                            <option value="64">64 GB</option>
                            <option value="128">128 GB</option>
                            <option value="256">256 GB</option>
                            <option value="512">512 GB</option>
                            <option value="1024">1 TB</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.chi_tiet_san_pham.rom, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.chi_tiet_san_pham.sim, htmlAttributes: new { @class = "form-label" })
                    <div>
                        <select id="chi_tiet_san_pham.sim" name="chi_tiet_san_pham.sim" class="form-select">
                            <option value="1">1 Sim</option>
                            <option value="2">2 Sim</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.chi_tiet_san_pham.sim, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.chi_tiet_san_pham.chan_sac, htmlAttributes: new { @class = "form-label" })
                    <div>
                        <select id="chi_tiet_san_pham.chan_sac" name="chi_tiet_san_pham.chan_sac" class="form-select">
                            <option value="Type-C">Type-C</option>
                            <option value="USB">Micro USB</option>
                            <option value="Lightning">Lightning</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.chi_tiet_san_pham.chan_sac, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <span class="text-danger">*</span>
                    @Html.LabelFor(model => model.chi_tiet_san_pham.dung_luong_pin, htmlAttributes: new { @class = "form-label" })
                    <div>
                        @Html.EditorFor(model => model.chi_tiet_san_pham.dung_luong_pin, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.chi_tiet_san_pham.dung_luong_pin, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="mt-4 d-flex align-items-center column-gap-2">
                <a href="/admin/product" class="btn btn-outline-danger rounded-0">Huỷ</a>
                <button class="btn btn-success rounded-0" type="submit">Lưu</button>
            </div>
        }
    </div>
</div>

